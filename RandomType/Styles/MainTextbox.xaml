<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Style x:Key="TextBoxWatermarked" TargetType="TextBox">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate>
                    <Grid>
                        <TextBox FontFamily="RobotoMono"
                                 FontSize="25"
                                 Background="Transparent"
                                 Foreground="{Binding SelectedTheme.LightColor}"
                                 IsEnabled="False"
                                 Text="ABCDEFG HIJKLM"
                                 >
                            
                        </TextBox>
                        <TextBox FontFamily="RobotoMono"
                                 FontSize="25"
                                 Background="Transparent"
                                 Foreground="Black">
                        </TextBox>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>